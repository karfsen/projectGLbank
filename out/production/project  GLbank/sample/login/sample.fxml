   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" prefHeight="800.0" prefWidth="1280.0" style="-fx-background-color: white;">
         <children>
            <Button fx:id="logBut" layoutX="582.0" layoutY="433.0" mnemonicParsing="false" onAction="#login" prefHeight="59.0" prefWidth="116.0" text="Login">
               <font>
                  <Font name="Constantia Bold" size="23.0" />
               </font></Button>
            <Label layoutX="482.0" layoutY="198.0" prefHeight="82.0" prefWidth="316.0" text="Banker's login" textFill="#575050">
