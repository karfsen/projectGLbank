                  <Font name="Comfortaa-Bold" size="50.0" />
               </font>
            </Label>
            <TextField fx:id="name" layoutX="566.0" layoutY="331.0" />
            <Label layoutX="566.0" layoutY="305.0" text="Username" />
            <Label layoutX="568.0" layoutY="369.0" text="Password" />
            <PasswordField fx:id="pw" layoutX="565.0" layoutY="388.0" prefHeight="25.0" prefWidth="149.0" />
            <Label fx:id="wrong" layoutX="557.0" layoutY="413.0" prefHeight="17.0" prefWidth="165.0" text="Wrong username or password." visible="false" />
            <ImageView fx:id="img" fitHeight="184.0" fitWidth="456.0" layoutX="417.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../logo/glbank.jpg" />
